<main>
    <% if user_signed_in? %>
        <div id="new_tag_form" class="w60">
            <%= form_for @new_article_tag do |t| %>
                <div class="append w50">
                    <%= t.text_field :tag_name , required: true  %>
                    <%= t.submit "新增分類" %>
                </div>
            <% end %>
        </div>
    <% end %>
    <div id="tags_breakline"></div>
    <div id="render_view"></div>
</main>

<div id="articles_modal" class="modal-box hide">
    <div class="modal">
        <span class="close"></span>
        <div class="modal-header clicked_value">
        </div>
        <div class="modal-body">
            <p class="help_text"></p>
            <ul class="render_texts"></ul>
            <% if user_signed_in? %>
            <a href="#" class="delete warning button" rel="nofollow" data-method="delete"
            data-confirm="你確定要刪除嗎？這個動作無法復原！">
                刪除此分類
            </a>
            <% end %>
        </div>
    </div>
</div>

<%= content_for :js_plugins do %>
    <%= javascript_include_tag "article_tags" %>
<% end %>
