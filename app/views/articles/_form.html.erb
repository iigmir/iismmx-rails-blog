<style>
.checkarea td *{display:inline-block;} button{margin: 1rem;}
</style>
<%= form_for @article do |m| %>
    <main>
      <table>
        <tr>
          <td> <%= m.label :title %> </td>
          <td> <%= m.text_field :title, :required => true %> </td>
        </tr>
        <tr>
          <td>
            <%= m.label :context %>
          </td>
          <td>
            <%= m.cktext_area :context, cols:40 %>
            <%#= language often: en-gb,ja,zh-tw %>
          </td>
        </tr>
        <tr id="highrisk">
          <td> <%= m.submit "Submit article" %> </td>
          <td>
              <%= link_to 'Cancel', @article %>
          </td>
        </tr>
      </table>
    </main>
<% end %>

<%= content_for :js_plugins %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
<% end %>
<script>
    var editor_visibility = $( "#article_context" ).css( "visibility" );
    if ( editor_visibility == "hidden" )
    {
        $( "#article_context" ).css( "visibility" , "visible" );
        console.log( "There's issue about ckeditor. Before issue fixed, please use ckeditor via website:" );
        console.log( "http://sdk.ckeditor.com/samples/uilanguages.html" );
    }
</script>
