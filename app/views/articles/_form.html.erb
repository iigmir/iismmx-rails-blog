<% if user_signed_in? %>
    <%= form_for @article do |m| %>
    <main>
      <table>
        <tr>
          <td> <%= m.label :title %> </td>
          <td> <%= m.text_field :title %> </td>
        </tr>
        <tr>
          <td> <%= m.label :context %> </td>
          <td> <%= m.text_area :context, size: '60x20' %> </td>
        </tr>
        <tr>
          <td> <%= m.submit %> </td>
          <td>
          <% if m == nil %>
            <%= link_to 'Discard ANY change AND go to index.', articles_path ,method: :get %>
          <% else %>
            <%= link_to 'Discard ANY change AND go to article.', @article ,method: :get %>
          <% end %>
          </td>
        </tr>
      </table>
    </main>
    <% end %>
<% else %>
  <p class="text-center">
  Hello there guest, to do actions in this page,
   you need to <%#= link_to "sign up,", new_user_registration_path %> <%= link_to "login", new_user_session_path  %>,
   or you want to <%= link_to 'go home',articles_url,method: :get %>?
  </p>
<% end %>
