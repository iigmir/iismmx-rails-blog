<h1 class="text-center"> <%= link_to 'My blog',articles_url,method: :get %> </h1>
<% a = @article %>
<main>
  <article class="row">
    <section class="col col-12">
      <p class="text-center">
        <b> Created:<%= a.created_at %>, Last updated: <%= a.updated_at %> </b>
        <% if user_signed_in? %>
              <br />
              Hello there <strong>admin</strong>.
              Want to <a class="text-center" href="/articles/new">add new article</a>,
              <%= link_to 'edit this article',  edit_article_url(a.id) %>,
              or <%= link_to 'delete Posting(DANGER!)', article_path(a.id), method: :delete, class:"error",
                     data: {confirm: 'Are you sure? THIS ARTICLE WILL DISAPPEAR FOREVER!'} %> ?
              <br />
              <span> And of course, you can <%= link_to "logout", destroy_user_session_path, method: :delete %>. </span>
        <% end %>
      </p>
    </section>
    
    <section class="col col-12">
      <h2> <%= a.title   %> </h2>
      <p>  <%= a.context %> </p>
    </section>
  </article>
</main>
